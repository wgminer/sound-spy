.profile 
    .profile__picture
        img(src="{{ user.picture }}", alt="Your profile picture")
    .profile__info
        h1.profile__name {{ user.name }}
        p.profile__email 
            span {{ user.email }}
            button.button(ng-click="logout") Log out
tabs.tabs
    .tab__group
        a.tab__item(ui-sref="profile.following", ng-class="{'is--active': activeTab == 'following'}") Following
            span.badge {{ following.length }}
        a.tab__item(ui-sref="profile.followers", ng-class="{'is--active': activeTab == 'followers'}") Followers
            span.badge {{ followers.length }}
        a.tab__item(ui-sref="profile.options", ng-class="{'is--active': activeTab == 'options'}", style="line-height: 20px;") Options
    .tab__panel(ui-view="", autoscroll="", ng-class="{'is--sharp': activeTab == 'following'}")
